{%- require "scripts/accordion.js" %}

<section id="sc-component-{{ content_block.identifier }}" class="sc-accordion sc-prominent sc-ms-auto" data-accordion>
  <button
    class="sc-accordion_header sc-prominent sc-gap-small"
    type="button"
    data-accordion-trigger>

    {%# Heading %}
    {%- if content_block.title %}
      <div class="sc-accordion_header_heading">
        <h3 class="sc-m-none">{{ content_block.title }}</h3>
      </div>
    {%- endif %}

    {%# Icon %}
    <svg class="sc-accordion_header_icon"
         data-accordion-icon
         viewBox="0 0 100 100">
      <rect x="0" y="42" width="100%" height="16" rx="8"></rect>
      <rect x="42" y="0" width="16" height="100%" rx="8"></rect>
    </svg>
  </button>

  <div
    class="sc-accordion_body"
    aria-expanded="false"
    data-accordion-target>
    {{ content_block.content }}
  </div>
</section>
